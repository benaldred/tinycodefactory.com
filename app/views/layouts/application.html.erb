    </div>
  </div>
  <div class="container">
    <header id="app">
      <h1>Tiny Code Factory.</h1>
    </header>
 
    <section class="intro">
      <%= yield :intro %>
    </section>
  </div><!-- .container -->   
  
  <div class="p-content clearfix">
    <%= yield %>
  </div>
  
  <div class="container">  
    <footer class="clearfix">
      <p>Get in touch: <a href="mailto:hello@tinycodefactory.com">hello@tinycodefactory.com</a></p>
      <p>A tiny web development company built on big principles.</p>
      <p><span class="copywrite">Â© Copyright <span id="cw-date">2008</span></span> tinycodefactory.com</p>
    </footer>
  </div><!-- #container -->

  
